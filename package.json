{
  "name": "apollo-fetch-server",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cccole3/apollo-fetch"
  },
  "author": "Chris Cole",
  "license": "MIT",
  "description": "postinstall yarn build && cd client && yarn && yarn build --prod && cd ..",
  "scripts": {
    "tsc": "tsc",
    "build": "yarn build-ts",
    "build-ts": "yarn tsc",
    "build:client": "cd client && yarn build --prod",
    "deploy": "git push heroku main",
    "logs:prod": "heroku logs --tail",
    "dev-server": "nodemon server/server.ts",
    "dev": "concurrently -k -p \"[{name}]\" -n \"Server,Client\" -c \"green.bold,cyan.bold\" \"yarn dev-server\" \"cd client && yarn start\"",
    "serve": "node dist/server.js",
    "start": "yarn serve"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "connect-mongo": "^3.2.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "express-validator": "^6.6.1",
    "gravatar": "^1.8.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.5",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "^1.10.0",
    "normalize-url": "^5.2.1",
    "typescript": "^4.0.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/bluebird": "^3.5.32",
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/connect-mongo": "^3.1.3",
    "@types/cors": "^2.8.7",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.8",
    "@types/express-session": "^1.17.0",
    "@types/express-validator": "^3.0.0",
    "@types/gravatar": "^1.8.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.36",
    "@types/mongoose-unique-validator": "^1.0.4",
    "@types/morgan": "^1.9.1",
    "@types/normalize-url": "^4.2.0",
    "@types/winston": "^2.4.4",
    "concurrently": "^5.3.0",
    "eslint-config-prettier": "^6.11.0",
    "ncp": "^2.0.0",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "supertest": "^5.0.0",
    "ts-node": "^9.0.0"
  }
}
